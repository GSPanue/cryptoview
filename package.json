{
  "name": "cryptowatch",
  "description": "A web application for data visualisation of cryptocurrency prices",
  "author": "Gurdev S. Panue",
  "version": "1.0.0",
  "scripts": {
    "postinstall": "run-p install:*",
    "install:web": "cd web && npm install",
    "install:downloader": "cd downloader && npm install",
    "build:web": "cd web && npm run build",
    "build:downloader": "cd downloader && npm run build",
    "start:web": "cd web && npm start",
    "start:downloader": "cd downloader && npm start",
    "build": "run-p build:*"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
